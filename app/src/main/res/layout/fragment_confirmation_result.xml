<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.talent.fragments.confirmation.ConfirmationResultFragment">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_main_toolbar" />

    <ImageView
        android:id="@+id/iv_confirmation_result"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/content_desc_confirmation"
        android:src="@drawable/slide_board_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_toolbar" />

    <TextView
        android:id="@+id/tv_body_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/lexend_bold"
        android:gravity="center"
        android:text="@string/confirmation_success_reward_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_confirmation_result" />

    <TextView
        android:id="@+id/tv_body_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lexend"
        android:gravity="center"
        android:text="@string/confirmation_success_reward_desc"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_body_title" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/btn_selesai"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_body_desc" />
</androidx.constraintlayout.widget.ConstraintLayout>