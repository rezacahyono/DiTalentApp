<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.talent.fragments.confirmation.ConfirmationResultFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend_medium"
            android:text="@string/confirmation_success"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="18dp" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_confirmation_result"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_confirmation_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:contentDescription="@string/content_desc_confirmation" />

    <TextView
        android:id="@+id/tv_body_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="70dp"
        android:text="@string/confirmation_success_reward_title"
        android:textSize="24sp"
        android:fontFamily="@font/lexend_bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/iv_confirmation_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_body_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="20dp"
        android:text="@string/confirmation_success_reward_desc"
        android:textSize="16sp"
        android:fontFamily="@font/lexend"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_body_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="50dp"
        android:text="@string/btn_selesai"
        android:textSize="16sp"
        android:fontFamily="@font/lexend_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_body_desc"
        />
</androidx.constraintlayout.widget.ConstraintLayout>