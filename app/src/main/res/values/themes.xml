<resources>

    <!-- Base Theme   -->
    <style name="Theme.DiTalent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryContainer">@color/purple_light</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryContainer">@color/orange_light</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorSurface">@color/white</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.DiTalent.MaterialAlertDialog
        </item>
        <item name="alertDialogTheme">@style/ThemeOverlay.DiTalent.AlertDialog</item>
    </style>

    <!--  Status Bar Theme  -->
    <style name="Theme.DiTalent.StatusBar" parent="Theme.DiTalent">
        <item name="android:statusBarColor">@color/purple</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <!--  Splash Theme  -->
    <style name="SplashTheme.DiTalent" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.DiTalent</item>
    </style>


</resources>