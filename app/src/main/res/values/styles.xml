<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Button  -->
    <style name="Widget.DiTalent.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.DiTalent.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DiTalent.SmallComponent</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
    </style>

    <style name="Widget.DiTalent.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.DiTalent.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DiTalent.SmallComponent</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/purple</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.DiTalent.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_height">@dimen/size_height_radio_button</item>
        <item name="android:background">@drawable/selector_bg_btn</item>
        <item name="android:textColor">@color/selector_text_btn</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.DiTalent.Button</item>
    </style>


    <!--  Text Appearance  -->
    <style name="TextAppearance.DiTalent.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <!-- TODO: Masukin font family -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.DiTalent.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <!-- TODO: Masukin font family -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DiTalent.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <!-- TODO: Masukin font family -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.DiTalent.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <!-- TODO: Masukin font family -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Layout Input Text   -->
    <style name="Widget.DiTalent.LayoutInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="android:bottomRightRadius">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/layout_input_text_corner</item>
        <item name="boxBackgroundColor">#08121212</item>
    </style>

    <style name="Widget.DiTalent.LayoutInputText.Password" parent="Widget.DiTalent.LayoutInputText">
        <item name="endIconMode">password_toggle</item>
        <item name="itemIconTint">@color/purple_light</item>
    </style>

    <!--  ShapeAppearance  -->
    <style name="ShapeAppearance.DiTalent.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_rounded</item>
    </style>

</resources>