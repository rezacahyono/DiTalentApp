<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Button  -->
    <style name="Widget.DiTalent.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.DiTalent.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DiTalent.SmallComponent</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
    </style>

    <style name="Widget.DiTalent.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.DiTalent.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DiTalent.SmallComponent</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/purple</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.DiTalent.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_height">@dimen/size_height_radio_button</item>
        <item name="android:background">@drawable/selector_bg_btn</item>
        <item name="android:textColor">@color/selector_text_btn</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.DiTalent.Button</item>
    </style>

    <style name="Widget.DiTalent.Text.Cta" parent="Widget.MaterialComponents.TextView">
        <item name="drawableEndCompat">@drawable/ic_small_arrow_right</item>
        <item name="drawableTint">?colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.DiTalent.Cta</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <!--  Text Appearance  -->
    <style name="TextAppearance.DiTalent.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.DiTalent.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lexend_bold</item>
    </style>

    <style name="TextAppearance.DiTalent.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <style name="TextAppearance.DiTalent.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <style name="TextAppearance.DiTalent.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lexend</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.DiTalent.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lexend_bold</item>
    </style>

    <style name="TextAppearance.DiTalent.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.DiTalent.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lexend</item>
    </style>

    <style name="TextAppearance.DiTalent.Cta" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lexend</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorAccent</item>
    </style>


    <!-- Layout Input Text   -->
    <style name="Widget.DiTalent.LayoutInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="android:bottomRightRadius">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/layout_input_text_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/layout_input_text_corner</item>
        <item name="boxBackgroundColor">#08121212</item>
    </style>

    <style name="Widget.DiTalent.LayoutInputText.Password" parent="Widget.DiTalent.LayoutInputText">
        <item name="endIconMode">password_toggle</item>
        <item name="itemIconTint">@color/purple_light</item>
    </style>

    <!--  ShapeAppearance  -->
    <style name="ShapeAppearance.DiTalent.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_shape_rounded</item>
    </style>

    <style name="ShapeAppearance.DiTalent.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_shape_rounded</item>
    </style>

    <style name="ShapeAppearance.DiTalent.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  Alert Dialog  -->
    <style name="ThemeOverlay.DiTalent.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">@dimen/medium_shape_rounded</item>
        <item name="backgroundTint">?colorBackgroundFloating</item>
        <item name="android:background">?colorBackgroundFloating</item>
    </style>

    <style name="ThemeOverlay.DiTalent.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="backgroundTint">?colorBackgroundFloating</item>
        <item name="android:background">?colorBackgroundFloating</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.DiTalent</item>
    </style>

    <style name="MaterialAlertDialog.DiTalent" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.DiTalent.MediumComponent</item>
    </style>

    <!-- Card  -->
    <style name="Widget.DiTalent.Card" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">@dimen/small_shape_rounded</item>
        <item name="strokeColor">@color/gray</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!--  Floating Actin Button  -->
    <style name="Widget.DiTalent.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DiTalent.FloatingActionButton</item>
        <item name="android:hapticFeedbackEnabled">false</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/purple_dark</item>
    </style>

    <style name="ThemeOverlay.DiTalent.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/purple</item>
    </style>

    <!--  Bottom App Bar  -->
    <style name="Widget.DiTalent.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="elevation">@dimen/elevation_small</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="contentInsetStart">0dp</item>
        <item name="fabCradleMargin">@dimen/size_cradle_fab</item>
        <item name="fabCradleRoundedCornerRadius">@dimen/size_cradle_fab</item>
        <item name="fabCradleVerticalOffset">0dp</item>
        <item name="fabAlignmentMode">center</item>
        <item name="fabAnimationMode">scale</item>
    </style>


</resources>